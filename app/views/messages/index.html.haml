.wrapper  
  = render 'shared/side_bar'
  .chat-main
    .main-header
      .main-header_left-box
        .main-header_left-box_current-group
        .main-header_left-box_menber-list
        .main-header_left-box_menber-list_menber
      .main-header_edit_btn  
        Edit
    .messages
      .messages_upper-info
        .messages_upper-info_talker
        .messages_upper-info_date
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'new_message', placeholder: 'type a message'
        .input_box
          = f.label :image, class: 'input_box_text' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'input_box_image'
        = f.submit 'Send', class: 'submit-btn'
    .form  
      .new_message 
        .input_box
          .input_box_text
            .input_box_image
              =fa_icon "image", class:"icon"
            .input_box_image_file
        .submit-btn
          Send
  