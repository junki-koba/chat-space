.wrapper  
  .chat-side
    .side-header
      .side-header_box
        .side-header_box_user-name aaa
        .side-header_box_menu
          .side-header_box_menu_new-group
            = link_to new_group_path(current_user) do
              = fa_icon 'edit', class:"icons"
          .side-header_box_menu_edit-user
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: "icons" 


    .groups
      .grpup 
        .group_group_name
        .group_latest-messages
  .chat-main
    .main-header
      .main-header_left-box
        .main-header_left-box_current-group
        .main-header_left-box_menber-list
        .main-header_left-box_menber-list_menber
      .main-header_edit_btn  
        Edit
    .messages
      .messages_upper-info
        .messages_upper-info_talker
        .messages_upper-info_date
    .form  
      .new_message
        .input_box
          .input_box_text
            type a text
            .input_box_image
              =fa_icon "image", class:"icon"
              .input_box_image_file
        .submit-btn
          Send
